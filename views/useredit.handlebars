<div class='container'>
  <a href='/' class='back-link'>← Back to Home</a>

  <div class='header'>
    <h1>✏️ Edit User</h1>
    <p>Update user information for {{user.name}}</p>
  </div>

  <form action='/users/edit/{{user.id}}' method='post' class='form'>
    <div class='form-control'>
      <label for='name'>👤 Full Name</label>
      <input
        type='text'
        name='name'
        id='name'
        placeholder='Enter full name'
        value='{{user.name}}'
        required
      />
    </div>

    <div class='form-control'>
      <label for='occupation'>💼 Occupation</label>
      <input
        type='text'
        name='occupation'
        id='occupation'
        placeholder='Enter occupation'
        value='{{user.occupation}}'
        required
      />
    </div>

    <div class='form-control form-checkbox'>
      {{#if user.newsletter}}
        <input type='checkbox' name='newsletter' id='newsletter' checked />
      {{else}}
        <input type='checkbox' name='newsletter' id='newsletter' />
      {{/if}}
      <label for='newsletter'>📩 Subscribe to newsletter</label>
    </div>

    <div class='card-actions'>
      <input type='submit' value='💾 Update User' />
      <a href='/users/{{user.id}}' class='btn btn-secondary'>❌ Cancel</a>
    </div>
  </form>

  <!-- Espaçamento entre elementos -->
  <div class='form-separator'></div>

  <div class='form address-container'>
    <h2>🏠 Addresses</h2>
    <form action='/address/create' method='POST'>
      <input type='hidden' name='UserId' value='{{user.id}}' />

      <div class='form-control'>
        <label for='street'>🛣️ Street</label>
        <input
          type='text'
          name='street'
          id='street'
          placeholder='Enter street name'
          required
        />
      </div>

      <div class='form-control'>
        <label for='number'>🏢 Number</label>
        <input
          type='text'
          name='number'
          id='number'
          placeholder='Enter house number'
          required
        />
      </div>

      <div class='form-control'>
        <label for='city'>🌆 City</label>
        <input
          type='text'
          name='city'
          id='city'
          placeholder='Enter city name'
          required
        />
      </div>

      <div class='card-actions'>
        <input type='submit' value='� Add Address' />
      </div>
    </form>

    <div class='address-list'>
      <h3>📋 List Address</h3>
      {{#if user.Addresses}}
        <div class='address-items'>
          {{#each user.Addresses}}
            <div class='address-item-edit'>
              <div class='address-icon-edit'>📍</div>
              <div class='address-content-edit'>
                <div class='address-main-edit'>
                  <div class='address-street-edit'>{{this.street}},
                    {{this.number}}</div>
                  <div class='address-city-edit'>{{this.city}}</div>
                </div>
                <div class='address-meta-edit'>
                  <span class='address-id-edit'>#{{this.id}}</span>
                </div>
              </div>
              <div class='address-actions-edit'>
                <form
                  action='/address/delete'
                  method='POST'
                  class='address-delete-form'
                >
                  <input type='hidden' name='id' value='{{this.id}}' />
                  <input type='hidden' name='UserId' value='{{this.UserId}}' />
                  <button
                    type='submit'
                    class='btn btn-danger btn-sm'
                  >🗑️</button>
                </form>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class='empty-state-edit'>
          <div class='empty-icon-edit'>📍</div>
          <p>No addresses registered yet.<br />Add your first address above!</p>
        </div>
      {{/if}}
    </div>
  </div>
</div>