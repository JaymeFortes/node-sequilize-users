<div class='container'>
  <a href='/' class='back-link'>← Back to Home</a>

  <div class='header'>
    <h1>👤 User Details</h1>
    <p>View and manage user information</p>
  </div>

  {{#if user}}
    <div class='card'>
      <h3>{{user.name}}</h3>
      <p><strong>📧 Email/ID:</strong> {{user.id}}</p>
      <p><strong>💼 Occupation:</strong> {{user.occupation}}</p>
      <p><strong>📩 Newsletter:</strong>
        {{#if user.newsletter}}
          <span class='badge badge-success'>✓ Subscribed</span>
        {{else}}
          <span class='badge badge-info'>✗ Not subscribed</span>
        {{/if}}
      </p>

      <div class='card-actions'>
        <a href='/users/edit/{{user.id}}' class='btn btn-success'>✏️ Edit User</a>
        <form
          action='/users/delete/{{user.id}}'
          method='post'
          style='display: inline;'
        >
          <button
            type='submit'
            class='btn btn-danger'
            onclick="return confirm('Are you sure you want to delete this user?')"
          >🗑️ Delete</button>
        </form>
      </div>
    </div>
  {{else}}
    <div class='empty-state'>
      <h3>User not found</h3>
      <p>The user you're looking for doesn't exist.</p>
    </div>
  {{/if}}
</div>